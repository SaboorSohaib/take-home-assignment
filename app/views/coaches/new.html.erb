<%= link_to "Back", user_coaches_path %>

<h2>Add new coach</h2>

<%= form_with model: @coach, url:  user_coaches_path do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control " %>
    </div>
    <div class="form-group">
      <%= f.label :time_zone %>
      <%= f.text_field :time_zone, class:"form-control " %>
    </div>
    <div class="form-group">
      <%= f.label :week_day %>
      <%= f.text_field :week_day, class:"form-control " %>
    </div>
    <div class="form-group">
      <%= f.label :available_at %>
      <%= f.text_field :available_at, class:"form-control " %>
    </div>
    <div class="form-group">
      <%= f.label :available_until %>
      <%= f.text_field :available_until, class:"form-control " %>
    </div>

    <%= f.submit "Add Coach" %>
<% end %>